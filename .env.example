# Studly Agent Configuration
# Copy this file to .env and configure with your settings

# ============================================
# Required Configuration
# ============================================

# Google Gemini API Key (required)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# History Management (Optional)
# ============================================

# Number of conversation turns to retain (default: 4)
# Each turn = 1 user message + 1 agent response
# Total messages = HISTORY_CAP_TURNS * 2
# Higher values = more context, more tokens
# Lower values = less context, fewer tokens
HISTORY_CAP_TURNS=4

# Enable automatic summarization (default: true)
# When enabled, long conversations are summarized instead of sending full history
# Recommended: keep enabled for better performance
ENABLE_SUMMARIZATION=true

# Number of messages that trigger summarization (default: 8)
# When history exceeds this threshold, a summary is generated
# Lower values = more aggressive summarization
# Higher values = less aggressive, more raw context
SUMMARY_THRESHOLD=8

# Enable message caching per context (default: true)
# Caches messages to avoid rebuilding history lists
# Recommended: keep enabled
ENABLE_HISTORY_CACHE=true

# ============================================
# Recommended Configurations by Use Case
# ============================================

# 1. Maximum Performance (minimal context)
#    HISTORY_CAP_TURNS=2
#    ENABLE_SUMMARIZATION=true
#    SUMMARY_THRESHOLD=4

# 2. Balanced (recommended for most use cases)
#    HISTORY_CAP_TURNS=4
#    ENABLE_SUMMARIZATION=true
#    SUMMARY_THRESHOLD=6

# 3. Maximum Context (higher token usage)
#    HISTORY_CAP_TURNS=10
#    ENABLE_SUMMARIZATION=false
#    SUMMARY_THRESHOLD=20

# 4. Testing/Development (minimal summarization)
#    HISTORY_CAP_TURNS=6
#    ENABLE_SUMMARIZATION=true
#    SUMMARY_THRESHOLD=12
